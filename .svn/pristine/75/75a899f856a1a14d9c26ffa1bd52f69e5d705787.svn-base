<style>
    .f{
        width: auto;
    }

</style>
<div class="content-hd">
    <fieldset class="layui-elem-field layui-field-title" >
        <legend>活动详情</legend>
    </fieldset>
</div>
<form class="layui-form" action="">
<div class="layui-tab layui-tab-card">
    <ul class="layui-tab-title">
        <li class="layui-this">基本信息</li>
        <li>限制信息</li>
        <li>单日限制</li>
        <li>单月限制</li>
        <li>其他</li>
    </ul>

    <div class="layui-tab-content" style="height: auto;">
        <div class="layui-tab-item layui-show wk">
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">标题:</label>
                <div class="layui-input-block">
                    <input type="text" name="title" required  lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">活动时间:</label>
                <div class="layui-input-block">
                    <input type="text" name="activity_time" required  lay-verify="required" placeholder="活动时间yyyy-mm-dd H:i:s" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">活动城市:</label>
                <div class="layui-input-block">
                    <select name="activity_city" lay-verify="required">
                        <option value=""></option>
                        <option value="0">北京</option>
                        <option value="1">上海</option>
                        <option value="2">广州</option>
                        <option value="3">深圳</option>
                        <option value="4">杭州</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="layui-tab-item">
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">总人数限制:</label>
                <div class="layui-input-block">
                    <input type="number" name="sum_people" required  lay-verify="required" placeholder="请输入总人数" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">总币额限制:</label>
                <div class="layui-input-block">
                    <input type="text" name="sum_b" required  lay-verify="required" placeholder="请输入总币额" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">总次数限制:</label>
                <div class="layui-input-block">
                    <input type="number" name="sum_n" required  lay-verify="required" placeholder="请输入总次数" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-tab-item">
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单日总币额限制:</label>
                <div class="layui-input-inline">
                    <input type="text" name="sum_b_day" required  lay-verify="required" placeholder="请输入单日总币额" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单日总次数限制:</label>
                <div class="layui-input-inline">
                    <input type="number" name="sum_n_day" required  lay-verify="required" placeholder="请输入单日总次数" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单人日总币额限制:</label>
                <div class="layui-input-inline">
                    <input type="text" name="sum_b_day_p" required  lay-verify="required" placeholder="请输入单人日总币额" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单人日总次数限制:</label>
                <div class="layui-input-inline">
                    <input type="number" name="sum_n_day_p" required  lay-verify="required" placeholder="请输入单人日总次数" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-tab-item">
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单月总币额限制:</label>
                <div class="layui-input-inline">
                    <input type="text" name="sum_b_month" required  lay-verify="required" placeholder="请输入单月总币额" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单月总次数限制:</label>
                <div class="layui-input-inline">
                    <input type="number" name="sum_n_month" required  lay-verify="required" placeholder="请输入单月总次数" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单人月总币额限制:</label>
                <div class="layui-input-inline">
                    <input type="text" name="sum_b_month_p" required  lay-verify="required" placeholder="请输入单人月总币额" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单人月总次数限制:</label>
                <div class="layui-input-inline">
                    <input type="number" name="sum_n_month_p" required  lay-verify="required" placeholder="请输入单人月总次数" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-tab-item">
            <div class="layui-form-item layui-form-text tdiv">
                <label class="layui-form-label f">活动描述:</label>
                <div class="layui-input-block">
                    <textarea name="activity_info" placeholder="请输入活动描述" class="layui-textarea"></textarea>
                </div>
            </div>
            <div class="layui-form-item tdiv">
                <label class="layui-form-label f">单人每次币额限制:</label>
                <div class="layui-input-inline">
                    <input type="text" name="people_b" required  lay-verify="required" placeholder="请输入单人每次币额" autocomplete="off" class="layui-input">
                </div>
            </div>
            </div>
        </div>
    </div>
    <div class="layui-input-block">
        <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
    </div>
</div>

</form>
<script>
    //Demo
    layui.use('form', function(){
        var form = layui.form;

        //监听提交
        form.on('submit(formDemo)', function(data){
            layer.msg(JSON.stringify(data.field));
            return false;
        });
    });
</script>